<div class="container">

  <form id="horse_info" {{action 'updateHorse' on='submit'}}>
    <ul class="standard_list">
      <li>
        <label>Horse Profile Photo</label>
        {{view 'upload-file' name="avatar" file=model.avatar }}
      </li>
      <li>
        <label>Nick Name</label>
        {{input id='nick_name' placeholder='Nick Name' value=model.nick_name class="login_field"}}</li>
      <li>
        <label>Name</label>
        {{input id='name' placeholder='Name' value=model.name class="login_field"}}</li>
      <li>
        <label>Breed</label>
        {{input id='breed' placeholder='Breed' value=model.breed class="login_field"}}</li>
      <li>
        <label>Reg. Number</label>
        {{input id='registration_number' placeholder='Registration Number' value=model.registration_number class="login_field"}}</li>
      <li>
        <label>Gender</label>
        {{input id='sex' placeholder='Sex' value=model.sex class="login_field"}}</li>
      <li>
        <label>Foaling Date</label>
        {{input id='foaling-date' type="date" placeholder='Foaling Date' value=model.foaling_date class="login_field"}}
      </li>
      <li>
        <label>Color</label>
        {{input id='color' placeholder='Color' value=model.color class="login_field"}}</li>
      {{!-- <li>{{input id='birthDate' placeholder='Birth Date' value=date_of_birth class="login_field"}}</li> --}}
      <li>
        <label>Date of Birth</label>
        {{input id='birthDate' placeholder='Birth Date' value=date_of_birth class="login_field" type="date"}}
        {{!-- {{date-picker-input controls="birth-date" value=date_of_birth class="login_field"}}
        {{date-picker-controls id="birth-date"}} --}}
      </li>
      <li>
        <label>Org Numbers</label>
        {{input id='org_numbers' placeholder='Org Numbers' value=model.org_numbers class="login_field"}}</li>
      <li>
        <label>Emergencies</label>
        {{input id='emergencies' placeholder='Name' value=model.emergencies class="login_field"}}
        {{input id='emergencies_phone' placeholder='Phone Number' value=model.emergencies_phone class="login_field"}}</li>
      <li>
        <label>Comments</label>
        {{input id='comments' placeholder='Comments' value=model.comments class="login_field"}}</li>
    </ul>
    <input class="red" type="submit" value="Save">
    <button class="outline" {{action 'cancel'}}>Cancel</button>
    <button class="outline" {{action 'delete'}}>Remove Horse</button>
  </form>
</div>
