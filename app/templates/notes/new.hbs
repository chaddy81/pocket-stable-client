<div class="container">
  <form id="horse_info" {{action 'createNote' on='submit'}}>
    <ul class="standard_list">
      <li>
        <label>Title</label>
        {{input id='title' placeholder='Title' value=title class="login_field"}}</li>
      <li>
        <label>Date</label>
        {{date-picker-input controls="my-datepicker" placeholder="Date" dateFormat="dddd, MMMM D, YYYY" value=date class="login_field"}}
        {{date-picker-controls id="my-datepicker"}}
      </li>
      <li>
        <label>Start Time</label>
        {{input id='start-time' placeholder='Start Time' value=start_time class="login_field"}}</li>
      <li>
        <label>End Time</label>
        {{input id='end-time' placeholder='End Time' value=end_time class="login_field"}}</li>
      <li>
        <label>Content</label>
        {{input id='content' placeholder='Content' value=model.content class="login_field"}}</li>
    </ul>
    <input class="red" type="submit" value="Save">
    <button class="outline" {{action 'cancel'}}>Cancel</button>
  </form>
</div>