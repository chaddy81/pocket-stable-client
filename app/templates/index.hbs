<div class="container">
  <div class="login_hdr">
    <img src="assets/images/login_splash.jpg" alt="Pocket Stable" />
  </div>

  <div class="login_form">
    <form {{action 'authenticate' on='submit'}}>
      {{input class="login_field" type="email" name="email" placeholder="Email"}}
      {{input class="login_field" type="password" name="password" placeholder="Password"}}
      <input class="red" type="submit" value="Login">
    </form>
  </div>

  <div class="login_ftr">
    <p>Need an account?</p>
    <button class="outline">Sign Up Free!</button>
  </div>
</div>