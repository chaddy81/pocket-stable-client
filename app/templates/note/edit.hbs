<form id="horse_info" {{action 'updateNote' on='submit'}}>
  <ul class="standard_list">
    <li>
      <label>Title</label>
      {{input id='title' placeholder='Title' value=model.title class="login_field"}}</li>
    <li>
      <label>Date</label>
      {{input id='date' value=model.date class="login_field" type="date"}}
    </li>
    <li>
      <label>Start Time</label>
      {{input id='start-time' type="time" value=model.start_time class="login_field"}}</li>
    <li>
      <label>End Time</label>
      {{input id='end-time' type="time" value=model.end_time class="login_field"}}</li>
    <li>
      <label>Content</label>
      {{input id='content' placeholder='Content' value=model.content class="login_field"}}</li>
  </ul>
  <input class="red" type="submit" value="Save">
  <button class="outline" {{action 'cancel'}}>Cancel</button>
  <button class="outline">Remove Note</button>
</form>
</div>